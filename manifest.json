{
    "id": "Test-zs6erj",
    "name": "EDICOMP",
    "version": "1.0.0",
    "main": "index.html",
    "manifestVersion": 5,
    "host": [
        {
            "app": "premierepro",
            "minVersion": "24.0.0"
        }
    ],
    "permissions": {
        "launchProcess": {
            "schemes": [ "https", "slack" ]
        }
    },
    "requiredPermissions": {
        "localFileSystem": "fullAccess",
        "launchLocalProcess": "fullAccess",
        "ipc": {
            "enablePluginCommunication": true
        },
        "webview": {
            "allow": "yes",
            "domains": [ "http://localhost:8000" ]
        },
        "network": {
            "domains": [ "http://localhost:8000" ]
        }
    },
    "entrypoints": [
        {
            "id": "edicomp.panel",
            "type": "panel",
            "label": {
                "default": "EDICOMP"
            },
            "main": "index.html",
            "minimumSize": { "width": 300, "height": 300 },
            "maximumSize": { "width": 2000, "height": 2000 },
            "preferredDockedSize": { "width": 300, "height": 400 },
            "preferredFloatingSize": { "width": 300, "height": 400 },
            "icons": [
                {
                    "width": 23,
                    "height": 23,
                    "path": "icons/dark.png",
                    "scale": [ 1, 2 ],
                    "theme": [ "darkest", "dark", "medium" ]
                },
                {
                    "width": 23,
                    "height": 23,
                    "path": "icons/light.png",
                    "scale": [ 1, 2 ],
                    "theme": [ "lightest", "light" ]
                }
            ]
        }
    ],
    "icons": [
        {
            "width": 48,
            "height": 48,
            "path": "icons/plugin-icon.png",
            "scale": [ 1, 2 ],
            "theme": [ "darkest", "dark", "medium", "lightest", "light", "all" ],
            "species": [ "pluginList" ]
        }
    ]
}